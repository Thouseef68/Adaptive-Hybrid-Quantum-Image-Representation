# FRQI Baseline Implementation (2x2 Image)

from qiskit import QuantumCircuit, Aer, execute
import numpy as np

# -----------------------------
# Step 1: Define a 2x2 image
# -----------------------------
# Pixel intensities normalized between 0 and 1
image = [0.1, 0.5, 0.7, 0.9]

# Convert intensities to rotation angles
angles = [np.pi * p for p in image]

# -----------------------------
# Step 2: Create FRQI circuit
# -----------------------------
# 2 position qubits + 1 color qubit
qc = QuantumCircuit(3)

# Apply Hadamard to position qubits
qc.h(0)
qc.h(1)

# Encode pixel intensities using controlled rotations
for i, angle in enumerate(angles):
    qc.mcry(angle, [0, 1], 2)

# -----------------------------
# Step 3: Simulate the circuit
# -----------------------------
simulator = Aer.get_backend('statevector_simulator')
result = execute(qc, simulator).result()
statevector = result.get_statevector()

print("FRQI Statevector:")
print(statevector)

# Optional: draw circuit
qc.draw('text')

