# FRQI Baseline Implementation (2x2 Image)

from qiskit import QuantumCircuit, Aer, execute
import numpy as np

# Define a small 2x2 grayscale image
image = [0.1, 0.5, 0.7, 0.9]
angles = [np.pi * p for p in image]

# Create FRQI circuit: 2 position qubits + 1 color qubit
qc = QuantumCircuit(3)

qc.h(0)
qc.h(1)

for angle in angles:
    qc.mcry(angle, [0, 1], 2)

qc.draw()

# Simulate the circuit
backend = Aer.get_backend("statevector_simulator")
result = execute(qc, backend).result()
statevector = result.get_statevector()

statevector
